
extends layout

block content
	div.navbar.navbar-fixed-top
		div.navbar-inner
			div.container-fluid
				ul#global-nav.nav.pull-left
					a(href='/').brand Home
					a(href='profile').brand Profile
					a(href='new').brand New
					a(href='itemList').brand ItemList
				button#btn-logout.btn.btn-primary
					i.icon-lock.icon-white
					| Sign Out

	include list
	include modals/alert
	include modals/confirm

block scripts
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/javascripts/angular.js')
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/cli_app.js')

